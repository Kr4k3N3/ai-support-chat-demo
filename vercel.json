{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/chat", "dest": "/api/chat.js" },
    { "src": "/api/escalate", "dest": "/api/escalate.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/web/dist/index.html" }
  ]
}
